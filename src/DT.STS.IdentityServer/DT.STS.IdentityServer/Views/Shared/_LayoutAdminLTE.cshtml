<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        @Html.Partial("_HeaderPartial")
        <!-- Left side column. contains the logo and sidebar -->
        
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                @RenderSection("contentheader", required: false)
            </section>

            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->

        </div>
        <!-- /.content-wrapper -->

    </div>
    @Scripts.Render("~/bundles/jquery")
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Scripts/admin_lte/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/admin_lte/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Morris.js charts -->
    <script src="~/Scripts/admin_lte/bower_components/raphael/raphael.min.js"></script>
    <script src="~/Scripts/admin_lte/bower_components/morris.js/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="~/Scripts/admin_lte/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/Scripts/admin_lte/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Scripts/admin_lte/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/Scripts/admin_lte/bower_components/jquery-knob/dist/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/Scripts/admin_lte/bower_components/moment/min/moment.min.js"></script>
    <script src="~/Scripts/admin_lte/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="~/Scripts/admin_lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <!--<script src="~/Scripts/admin_lte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>-->
    <!-- Slimscroll -->
    <script src="~/Scripts/admin_lte/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Scripts/admin_lte/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/admin_lte/adminlte.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <!--<script src="~/Scripts/pages/dashboard.js"></script>-->
    <!--Date utils-->
    <!--<script src="~/Scripts/date.js"></script>-->
    <!-- AdminLTE for demo purposes -->
    <script src="~/Scripts/admin_lte/demo.js"></script>
    <script src="~/Scripts/jquery.toast.min.js"></script>
    <script src="~/Scripts/busy-load.min.js"></script>
    <script>
        $.busyLoadSetup({ background: "rgba(100, 100, 0, 0.86)" });
        $(document).ajaxStart(function () {
            $.busyLoadFull("show", {
                spinner: "cubes"
            });
        });
        $(document).ajaxComplete(function () {
            $.busyLoadFull("hide");
        });
        $(document).ajaxSuccess(function (event, xhr, settings) {
            let message = 'Thêm mới dữ liệu thành công';
            if (xhr.message !== undefined) {
                message = xhr.message.infor;
                const title = 'Thông báo';
                $.toast({
                    heading: title,
                    text: message,
                    position: 'top-right',
                    icon: 'info',
                    loader: true,        // Change it to false to disable loader
                    loaderBg: '#9EC600',  // To change the background,
                    hideAfter: 1500,
                    afterHidden: function () {
                        if (xhr.message.returnUrl !== undefined) {
                            window.location.href = xhr.message.returnUrl;
                        }
                    }
                })
            }
        });
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>

