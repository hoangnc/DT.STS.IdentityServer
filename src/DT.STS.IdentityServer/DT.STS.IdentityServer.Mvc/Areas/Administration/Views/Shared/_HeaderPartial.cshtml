<header class="main-header">
    <!-- Logo -->
    <a href="index2.html" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>S</b>TS</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Duy Tan Security Token Service</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                @Html.Action("_LanguagesPartial", "Users")
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @{ if (string.IsNullOrEmpty(User.Identity.GetUserImage()))
            {
        <img src="~/images/avatar5.png" class="user-image" alt="User Image">
            }
            else {
            @Html.Image(User.Identity.GetUserImage())
            }
        }
                        <!--<img src="https://outlook.office365.com/owa/service.svc/s/GetPersonaPhoto?email=@User.Identity.GetUserEmail()&UA=0&size=HR64x64&sc=1468233338850" class="user-image" alt="User Image">-->
                        <span class="hidden-xs">@User.Identity.GetDisplayName()</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">@Ls(DTWebConsts.LocalizationSourceName, DTWebResourceNames.Profile)</a>
                            </div>
                            <div class="pull-right">
                                <a href="~/home/Logout" class="btn btn-default btn-flat">@Ls(DTWebConsts.LocalizationSourceName, DTWebResourceNames.SignOut)</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
                <!-- <li>
        <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
    </li>-->
            </ul>
        </div>
    </nav>

</header>
